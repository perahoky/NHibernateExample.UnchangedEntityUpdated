<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="http://logging.apache.org/log4net">
	<appender name="File"
			  type="log4net.Appender.RollingFileAppender">
		<file value="nhibernate-example.log" />
		<appendToFile value="false" />
		<maximumFileSize value="10MB" />
		<maxSizeRollBackups value="5" />

		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<appender name="Console"
			  type="log4net.Appender.AnsiColorTerminalAppender">

		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-5level %logger{1} - %message%newline" />
		</layout>

		<mapping>
			<level value="TRACE" />
			<forecolor value="Blue" />
		</mapping>

		<mapping>
			<level value="DEBUG" />
			<forecolor value="Cyan" />
		</mapping>

		<mapping>
			<level value="INFO" />
			<forecolor value="White" />
		</mapping>

		<mapping>
			<level value="ERROR" />
			<forecolor value="Red" />
		</mapping>

		<mapping>
			<level value="WARN" />
			<forecolor value="Yellow" />
		</mapping>

		<mapping>
			<level value="FATAL" />
			<forecolor value="Magenta" />
		</mapping>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="File" />
		<appender-ref ref="Console" />
	</root>

	<logger name="NHibernate"
			additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="File" />
	</logger>

	<logger name="NHibernate.SQL"
			additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="File" />
	</logger>
</log4net>